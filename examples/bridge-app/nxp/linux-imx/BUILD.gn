import("//build_overrides/chip.gni")
import("//build_overrides/k32w0_zigbee_bridge.gni")
import("${chip_root}/build/chip/tools.gni")

assert(chip_build_tools)

executable("imx-chip-bridge-app") {
  sources = [
    "${chip_root}/examples/tv-app/tv-common/include/CHIPProjectAppConfig.h",
    "main/src/Device.cpp",

    # Matter Bridge
    "main/src/Bridge.cpp",
    "main/src/BridgeMgr.cpp",
    "main/src/BridgeActions.cpp",
    "main/src/bridged-actions-stub.cpp",

    #Zigbee Control Bridge
    #"${k32w0_zigbee_bridge_src}/IotCommon/dump.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/fileCreate.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/iotSemaphore.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/iotSleep.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/newDb.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/newLog.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/nibbles.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/parsing.c",
    #"${k32w0_zigbee_bridge_src}/IotCommon/systemtable.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/cmd.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/Serial.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/SerialLink.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/Utils.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/zcb.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/zcb_main.c",
    #"${k32w0_zigbee_bridge_src}/ZCB/ZigbeeDevices.c",

    "main.cpp",
  ]

  deps = [
    "${chip_root}/examples/bridge-app/bridge-common",
    "${chip_root}/examples/platform/linux:app-main",
    "${chip_root}/src/lib",
    "${k32w0_zigbee_bridge_src}:libzcb",
  ]

  include_dirs = [
    "main/include",
    "${k32w0_zigbee_bridge_src}/IotCommon",
    "${k32w0_zigbee_bridge_src}/ZCB",
  ]

  output_dir = root_out_dir
}

group("linux") {
  deps = [ ":imx-chip-bridge-app" ]
}
