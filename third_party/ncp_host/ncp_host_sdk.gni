import("//build_overrides/build.gni")
import("//build_overrides/chip.gni")
import("//build_overrides/ncp_host_sdk.gni")

ncp_host_sdk_root = "${chip_root}/third_party/ncp_host/repo/ncp_host"

template("ncp_host_sdk") {

  ncp_host_target_name = target_name

  config("${ncp_host_target_name}_base_config") {
    include_dirs = []
    include_dirs += [
      "${ncp_host_sdk_root}/src/",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/",
      "${ncp_host_sdk_root}/src/common/ncp_cmd_node/",
      "${ncp_host_sdk_root}/src/common/ncp_debug/",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_tlv/",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/sdio/",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/uart/",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/usb/",
      "${ncp_host_sdk_root}/src/wifi/",
      "${ncp_host_sdk_root}/src/common/crc/",
      "${ncp_host_sdk_root}/src/common/lpm/",
    ]
  }

  config("${ncp_host_target_name}_base_flags"){
    cflags = [
      "-DCONFIG_NCP_USB  = 1",
      "-DCONFIG_NCP_WIFI = 1",
    ]
  }

  source_set(ncp_host_target_name) {
    forward_variables_from(invoker,
                           [
                             "sources",                             
                             "public_configs",
                             "public_deps",
                           ])

    if (!defined(sources)) {
      sources = []
    }
    sources += [
      "${ncp_host_sdk_root}/src/common/crc/crc.c",
      "${ncp_host_sdk_root}/src/common/lpm/lpm.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/sdio/ncp_intf_sdio.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/sdio/sdio.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/spi/ncp_intf_spi.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/spi/spi_master.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/uart/ncp_intf_uart.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/uart/uart.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/usb/ncp_intf_usb.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_intf/usb/usb.c",
      "${ncp_host_sdk_root}/src/common/ncp_adapter/ncp_tlv/ncp_tlv_adapter.c",
      "${ncp_host_sdk_root}/src/common/ncp_cmd_node/ncp_cmd_node.c",
      "${ncp_host_sdk_root}/src/wifi/ncp_host_command_wifi.c",
      "${ncp_host_sdk_root}/src/wifi/ncp_wifi_api.c",
      "${ncp_host_sdk_root}/src/ncp_host_command.c",
      "${ncp_host_sdk_root}/src/system/ncp_host_app_system.c",
      "${ncp_host_sdk_root}/src/system/ncp_host_command_system.c",

      "${ncp_host_sdk_root}/src/ncp_host_app.c",
      "${ncp_host_sdk_root}/src/wifi/ncp_host_app_wifi.c",
    ]
    
    if (!defined(public_configs)) {
      public_configs = []
    }

    deps = [
      ":libusb",
    ]
    ldflags = [
      "-L/usr/local/lib",
    ]

    libs = [
      "usb-1.0",
    ]

    public_configs += [ ":${ncp_host_target_name}_base_config" ]
    public_configs += [ ":${ncp_host_target_name}_base_flags" ]
  }
}
